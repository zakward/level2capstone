  "scripts": {
    "build": "npm run minify-html && npm run copy-assets",
    "minify-html": "html-minifier --input-dir src --output-dir build --file-ext html --collapse-whitespace",
    "copy-assets": "cp -R src/assets build/"
  },
  "devDependencies": {
    "html-minifier": "^5.3.0"
  }
}

